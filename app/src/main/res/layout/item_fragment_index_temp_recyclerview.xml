<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_fragment_index_temp_recyclerview_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_fragment_index_temp_recyclerview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="?attr/normalTextColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_fragment_index_temp_recyclerview_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_fragment_index_temp_recyclerview_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>
        
        <ImageView
            android:id="@+id/item_fragment_index_temp_recyclerview_option"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:clickable="true"
            android:tint="?attr/normalTextColor"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_item_fragment_index_temp_recyclerview_option"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_fragment_index_temp_recyclerview_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="?attr/normalTextColor"/>

    <LinearLayout
        android:id="@+id/item_fragment_index_temp_recyclerview_repost_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@drawable/shape_weibo_repost_corner"
        android:orientation="vertical"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="5dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/item_fragment_index_temp_recyclerview_repost_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="?attr/normalTextColor"/>

        <ceneax.app.hongmiao.widget.NineGridImageLayout.NineGridImageLayout
            android:id="@+id/item_fragment_index_temp_recyclerview_repost_nine_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <ceneax.app.hongmiao.widget.NineGridImageLayout.NineGridImageLayout
        android:id="@+id/item_fragment_index_temp_recyclerview_nine_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"/>

    <LinearLayout
        android:id="@+id/item_fragment_index_temp_recyclerview_operate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="5dp"
                android:tint="?attr/normalTextColor"
                android:src="@drawable/ic_item_fragment_index_temp_recyclerview_repost"/>

            <TextView
                android:id="@+id/item_fragment_index_temp_recyclerview_repost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_fragment_index_temp_recyclerview_comment_wrap"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:tint="?attr/normalTextColor"
                android:src="@drawable/ic_item_fragment_index_temp_recyclerview_comment"/>

            <TextView
                android:id="@+id/item_fragment_index_temp_recyclerview_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="5dp"
                android:tint="?attr/normalTextColor"
                android:src="@drawable/ic_item_fragment_index_temp_recyclerview_thumb"/>

            <TextView
                android:id="@+id/item_fragment_index_temp_recyclerview_thumb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>