<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:textColor="@color/color_FFFFFF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/activity_login_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:paddingHorizontal="40dp">

        <EditText
            android:id="@+id/activity_login_edit_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:inputType="phone"
            android:textColor="@color/color_FFFFFF"
            android:textColorHint="@color/color_FFFFFF"
            android:textSize="14sp"
            android:hint="@string/activity_login_edit_user"/>

        <EditText
            android:id="@+id/activity_login_edit_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:padding="20dp"
            android:inputType="textPassword"
            android:textColor="@color/color_FFFFFF"
            android:textColorHint="@color/color_FFFFFF"
            android:textSize="14sp"
            android:hint="@string/activity_login_edit_pwd"/>

        <Button
            android:id="@+id/activity_login_bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/activity_login_bt_login"
            android:background="@drawable/shape_tab_indicator" />

    </LinearLayout>

</RelativeLayout>