<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_dialog_reply_bottom_recyclerview_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_dialog_reply_bottom_recyclerview_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="?attr/normalTextColor" />

            <TextView
                android:id="@+id/item_dialog_reply_bottom_recyclerview_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_dialog_reply_bottom_recyclerview_thumb"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:clickable="true"
                android:tint="?attr/normalTextColor"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_item_fragment_index_temp_recyclerview_thumb"/>

            <TextView
                android:id="@+id/item_dialog_reply_bottom_recyclerview_thumb_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/item_dialog_reply_bottom_recyclerview_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="?attr/normalTextColor"/>

</LinearLayout>